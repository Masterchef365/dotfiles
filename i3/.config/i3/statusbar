general {
	output_format = "i3bar"
	colors = true
	interval = 5
}
order += "battery 0"
order += "tztime local"
tztime local {
	format = "%a %m/%d %H:%M"
}
battery 0 {
	format = "%status %percentage"
		format_down = "No battery"
		status_chr = "CHR"
		status_bat = "BAT"
		status_unk = "BAT"
		status_full = "FULL"
		path = "/sys/class/power_supply/BAT%d/uevent"
		low_threshold = 10
}
