#vim:filetype=i3

exec xrdb -merge ~/.Xresources

# ----------------------- Defines/Variables -----------------------

# Set the modifier key, set floating modifier to the same
set $mod Mod4
floating_modifier $mod

# Set the editor
set $editor urxvt

# Xresources
set_from_resource $color0  i3wm.color0   #ff00ff
set_from_resource $color1  i3wm.color1   #ff00ff
set_from_resource $color2  i3wm.color2   #ff00ff
set_from_resource $color3  i3wm.color3   #ff00ff
set_from_resource $color4  i3wm.color4   #ff00ff
set_from_resource $color5  i3wm.color5   #ff00ff
set_from_resource $color6  i3wm.color6   #ff00ff
set_from_resource $color7  i3wm.color7   #ff00ff
set_from_resource $color8  i3wm.color8   #ff00ff
set_from_resource $color9  i3wm.color9   #ff00ff
set_from_resource $color10 i3wm.color10  #ff00ff
set_from_resource $color11 i3wm.color11  #ff00ff
set_from_resource $color12 i3wm.color12  #ff00ff
set_from_resource $color13 i3wm.color13  #ff00ff
set_from_resource $color14 i3wm.color14  #ff00ff
set_from_resource $color15 i3wm.color15  #ff00ff

# ----------------------- Style options -----------------------

#Window colors				border  	backgr. 	text    	indicator
client.focused          $color10 $color10 $color5	$color2
client.focused_inactive $color10 $color0 	$color5 	$color2
client.unfocused        $color10 $color0 	$color5 	$color2
client.urgent           $color10 $color10 $color5 	$color2
client.placeholder      $color10 $color10 $color5 	$color2

# Font config
font pango:monospace 10

# Border options
new_window none
gaps inner 15
smart_gaps on
smart_borders on
for_window [class="^.*"] border pixel 2

# ----------------------- Program shortcut options -----------------------

# Rofi
bindsym $mod+z exec rofi -show window
bindsym $mod+d exec rofi -show run
bindsym $mod+c exec bash ~/.bitsAndBobs/rofidim.sh

# Terminal
bindsym $mod+Return exec urxvt
#bindsym $mod+Return exec alacritty

# Kill focused window
bindsym $mod+Shift+q kill

# ----------------------- Window movement/Workspace switching -----------------------

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split windows
bindsym $mod+t split horizontal
bindsym $mod+q split vertical

# Misc. window options
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# Switch workspaces
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# Move containers to workspaces
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# Resize containers
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# ----------------------- Multimedia Keys -----------------------
bindsym XF86AudioRaiseVolume exec --no-startup-id sh -c ". ~/.bitsAndBobs/audio_setters/set_current_window_volume.sh VolUp"
bindsym XF86AudioLowerVolume exec --no-startup-id sh -c ". ~/.bitsAndBobs/audio_setters/set_current_window_volume.sh VolDn"
bindsym XF86AudioMute exec --no-startup-id sh -c ". ~/.bitsAndBobs/audio_setters/set_current_window_volume.sh Mute"

bindsym XF86KbdBrightnessUp exec --no-startup-id kbdlight up 5
bindsym XF86KbdBrightnessDown exec --no-startup-id kbdlight down 5

bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5

bindsym XF86AudioPrev exec --no-startup-id mpc prev
bindsym XF86AudioPlay exec --no-startup-id mpc toggle
bindsym XF86AudioNext exec --no-startup-id mpc next

# ----------------------- i3-Specific commands -----------------------
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You sure, fam?' -b 'Ya boi' 'i3-msg exit'"
bindsym $mod+i exec i3lock-fancy -pf "Fantasque-Sans-Mono-Regular" -- scrot

# ----------------------- Post-WM commands -----------------------
exec ~/.fehbg
exec redshift -l geoclue2
exec xrandr --dpi 160
exec --no-startup-id sh -c 'cd ~/.lemonbar && ./executebar.sh &'
exec --no-startup-id mpd

for_window [class="*mono*"] floating enable,move absolute center
