! Color definitions
#define S_background #000f13
#define S_foreground #d9d9d9

#define S_color0    #002b36
#define S_color1    #dc322f
#define S_color2    #859900
#define S_color3    #b58900
#define S_color4    #268bd2
#define S_color5    #6c71c4
#define S_color6    #2aa198
#define S_color7    #8eacb7

#define S_color8    #2d6573
#define S_color9    #dc322f
#define S_color10   #859900
#define S_color11   #b58900
#define S_color12   #268bd2
#define S_color13   #6c71c4
#define S_color14   #2aa198
#define S_color15   #fdf6e3

#define S_DPI 96

! Rofi Settings
rofi.color-enabled: true
!State:             bg             fg             bgalt          hlbg           hlfg
rofi.color-window:  S_background,  S_color11                                    
rofi.color-normal:  S_color0,      S_foreground,  S_color0,      S_color11,     S_background
rofi.color-active:  S_color0,      S_foreground,  S_color0,      S_background,  S_foreground
rofi.color-urgent:  S_background,  S_foreground,  S_background,  S_background,  S_foreground
rofi.font:          Monospace 12             
rofi.dpi:           S_DPI
rofi.location:      0                                                           
rofi.xoffset:       0                                                           
rofi.terminal:      alacritty                                                   

! URXVT/Xterm colors
*foreground:   S_foreground
*background:   S_background
*cursorColor:  S_foreground
*color0:       S_color0
*color1:       S_color1
*color2:       S_color2
*color3:       S_color3
*color4:       S_color4
*color5:       S_color5
*color6:       S_color6
*color7:       S_color7
*color8:       S_color8
*color9:       S_color9
*color10:      S_color10
*color11:      S_color11
*color12:      S_color12
*color13:      S_color13
*color14:      S_color14
*color15:      S_color15

! Xorg settings
Xft.dpi:       S_DPI
