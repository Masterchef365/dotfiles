get_color () {
	xrdb -query | grep "$1:" | cut -f2 | sed -r 's/#//' | head -n 1
}
color () {
	get_color color$1
}
color_bg () {
	get_color "*background"
}
color_fg () {
	get_color "*foreground"
}

   NAME="follow xresources theme"
  NOGUI=True
     BG=$(color_bg)
     FG=$(color_fg)
 SEL_BG=$(color 8)
 SEL_FG=$BG
 TXT_BG=$BG
 TXT_FG=$FG
MENU_BG=$BG
MENU_FG=$FG
 BTN_BG=$BG
 BTN_FG=$FG
