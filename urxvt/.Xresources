#define S_foreground 	#ffffff
#define S_background 	#000000
#define S_color0 	#000000
#define S_color8 	#aaaaaa
#define S_color1 	#ff00aa
#define S_color9 	#ff0055
#define S_color2 	#00aaff
#define S_color10 	#ff00aa
#define S_color3 	#ff0055
#define S_color11 	#aa00ff
#define S_color4 	#00aaff
#define S_color12 	#ff00aa
#define S_color5 	#aa00ff
#define S_color13 	#00aaff
#define S_color6 	#00aaff
#define S_color14 	#aa00ff
#define S_color7 	#aaaaaa
